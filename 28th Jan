//				recievedCompiledQuery.setInt(1, 100);
//				recievedCompiledQuery.setString(2, "Mark");
//				recievedCompiledQuery.setInt(3, 34);
//				
//				int rowCount = recievedCompiledQuery.executeUpdate();
//				System.out.println(rowCount);
	}

}
