package com.abc.demo;

import static org.testng.Assert.assertEquals;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.testng.annotations.Listeners;
import org.testng.annotations.Test;

@Listeners(ListenerLogic.class)
public class Login  {
	
	@Test
	public void validLogin()
	{
		WebDriver driver = new ChromeDriver();
		ListenerLogic.extentTest.get().pass("Browser opened!");
		
		
		driver.get("https://practicetestautomation.com/practice-test-login/");
		ListenerLogic.extentTest.get().pass("Navigation successfull!");
		
		driver.findElement(By.id("username")).sendKeys("student");
		ListenerLogic.extentTest.get().pass("Entered username!");
		
		driver.findElement(By.id("password")).sendKeys("Password123");
		ListenerLogic.extentTest.get().pass("Entered password!");
		
		driver.findElement(By.id("submit")).click();
		ListenerLogic.extentTest.get().pass("Submit click successfull!");
		
		String expectedOutput = "Logged In Successfully";
		String actualOutput = driver.findElement(By.xpath("//h1[text()='Logged In Successfully']"))
		.getText();
		
//		Assertions / Validations
		assertEquals(expectedOutput, actualOutput);
		
		driver.close();
		ListenerLogic.extentTest.get().pass("Browser closed successfully!");
	}
	
	@Test
	public void InvalidLogin()
	{
	    WebDriver driver = new ChromeDriver();
	    ListenerLogic.extentTest.get().pass("Browser opened!");

	    driver.get("https://practicetestautomation.com/practice-test-login/");
	    ListenerLogic.extentTest.get().pass("Navigation successful!");

	    driver.findElement(By.id("username")).sendKeys("raju");
	    ListenerLogic.extentTest.get().pass("Entered invalid username!");

	    driver.findElement(By.id("password")).sendKeys("Password123");
	    ListenerLogic.extentTest.get().pass("Entered password!");

	    driver.findElement(By.id("submit")).click();
	    ListenerLogic.extentTest.get().pass("Clicked submit button!");

	    String expectedOutput = "Your username is invalid!";
	    String actualOutput = driver.findElement(By.id("error")).getText();

	    // Assertion
	    assertEquals(expectedOutput, actualOutput);
	    ListenerLogic.extentTest.get().pass("Validation successful! Error message verified.");

	    driver.close();
	    ListenerLogic.extentTest.get().pass("Browser closed successfully!");
	}
	
}
