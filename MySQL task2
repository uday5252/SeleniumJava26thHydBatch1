CREATE TABLE Picnic (
    picnic_id INT PRIMARY KEY,
    organizer VARCHAR(50),
    location VARCHAR(50),
    attendees INT,
    budget INT
);

INSERT INTO Picnic (picnic_id, organizer, location, attendees, budget) VALUES
(1, 'Raju', 'Beach', 15, 5000),
(2, 'Mary', 'Park', 10, 3000),
(3, 'John', 'Hills', 20, 7000),
(4, 'Alex', 'Lake', 8, 2500),
(5, 'Rani', 'Beach', 12, 4000),
(6, 'Cook', 'Park', 18, 6000),
(7, 'Sam', 'Lake', 25, 8000);

